<Window
    x:Class="UtilsForm.CatchMe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UtilsForm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CatchMe"
    Width="1280"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="canButton"
            Width="76"
            Height="42"
            Margin="344,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="cantButton_Click"
            Content="点击我" />
        <Button
            x:Name="cantButton"
            Width="76"
            Height="42"
            Margin="344,162,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="cantButton_Click"
            Content="点不到我吧"
            DragEnter="cantButton_DragEnter"
            MouseEnter="cantButton_MouseEnter" />

    </Grid>
</Window>
