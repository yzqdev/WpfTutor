<Window
    x:Class="WpfTutor.View.StylePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfTutor.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StylePage"
    Width="1280"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>
        <Button
            x:Name="BasicStyle"
            Grid.Row="0"
            Grid.Column="0"
            Width="100"
            Height="40"
            Click="BasicStyle_Click"
            Content="BasicStyle" />
        <Button
            x:Name="TriggerStyle"
            Grid.Row="0"
            Grid.Column="1"
            Width="100"
            Height="40"
            Click="TriggerStyle_Click"
            Content="TriggerStyle" />
    </Grid>
</Window>
