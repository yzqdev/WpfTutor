<Window
    x:Class="WpfTest.View.ImagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfTest.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ImagePage"
    Width="1280"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">

            <StackPanel>
                <WrapPanel Margin="10" HorizontalAlignment="Center">
                    <Button
                        Name="btnLoadFromFile"
                        Margin="0,0,20,0"
                        Click="BtnLoadFromFile_Click">
                        Load from File...
                    </Button>
                    <Button Name="btnLoadFromResource" Click="BtnLoadFromResource_Click">Load from Resource</Button>
                </WrapPanel>

            </StackPanel>
        </StackPanel>
        <Border Grid.Row="0" Grid.Column="1">
            <Image x:Name="imgDynamic" Stretch="Uniform" />
        </Border>
    </Grid>
</Window>
